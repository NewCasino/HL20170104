@section scripts{
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">
        function afterPost(data) {
            if (data.Status == 200) {
                alert("发行成功，即将为您跳转页面!");
                location.href = "@(Url.Action("StockIssue"))";
            } else {
                alert("发行失败：" + data.Message);
            }
        }
    </script>
