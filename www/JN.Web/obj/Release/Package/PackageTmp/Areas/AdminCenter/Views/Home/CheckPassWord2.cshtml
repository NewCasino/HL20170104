@{
    Layout = "~/Areas/AdminCenter/Views/Shared/_Layout.cshtml";
}
<div id="content">
    <!-- Breadcrumb -->
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")" class="glyphicons home"><i></i> 首页</a></li>
        <li class="divider"></li>
        <li>@ViewBag.Title</li>
    </ul>
    <div class="separator bottom"></div>
    <div class="innerLR">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            @using (Ajax.BeginForm("CheckPassWord2", new { }, new AjaxOptions() { HttpMethod = "Post", OnSuccess = "afterPost" }, new { id = "saveForm", @class = "form-horizontal" }))
            {
                <div class="control-group">
                    <label class="control-label" for="drawmoney">二级密码：</label>
                    <div class="col-xs-12 col-sm-5">
                        <div class="controls">
                            <input type="password" name="password2" class="form-control" style="width:100px" value="" />
                        </div>
                    </div>
                </div>

                <div class="hr hr-dotted"></div>
                <div class="control-group">
                    <label class="control-label">&nbsp;</label>
                    <div class="controls">
                        <button class="btn btn-primary" type="submit">
                            验证
                        </button>

                    </div>
                </div>
            }

            <!-- PAGE CONTENT ENDS -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</div><!-- /.page-content -->
<!-- page specific plugin scripts -->
<!--[if lte IE 8]>
  <script src="/assets/js/excanvas.min.js"></script>
<![endif]-->
@section scripts{
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">
        function afterPost(data) {
            if (data.Status == 200) {
                alert("验证成功，即将为您跳转页面!");
                location.href = data.Message;
            } else {
                alert("验证失败！错误信息：" + data.Message);
            }
        }
    </script>
}