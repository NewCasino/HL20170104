</div>




<script>
    function afterPost(data) {

        if (data.result == "ok") {
            tbox("恭喜您，回购成功！", data.goUrl);
            //tbox(data.refMsg, data.goUrl);
            return;
        } else {
            mbox(data.refMsg);
            return false;
        }

