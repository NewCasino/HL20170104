        $('#regBtn').text('发送中....');
        $.ajax({
            type: "post",
            url: "@(Url.Action("SendMobileMsm", "Reg"))",
            data: { myphone: myphone },
            success: function (data) {
                if (data.Status == 200) {
                    $('#regBtn').text('@T("发送验证码")');
                    alert("@T("发送成功，请注意查收验证码!")");
